# ============================================
# YACHT CLUB - Environment Variables Template
# ============================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# ============================================
# SITE CONFIGURATION
# ============================================
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# ============================================
# SUPABASE CONFIGURATION (REQUIRED)
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_DB_PASSWORD=your-db-password

# ============================================
# AI SERVICES (Required for AI features)
# ============================================
# Anthropic Claude API (for AI features)
ANTHROPIC_API_KEY=sk-ant-api03-...

# OpenAI API (for AI features)
OPENAI_API_KEY=sk-...

# Exa Search API (for AI research)
EXASEARCH_API_KEY=your-exa-key
EXA_API_KEY=your-exa-key

# Remove.bg API (for background removal in media uploads)
REMOVE_BG_API_KEY=your-remove-bg-key

# Google Maps API (for location reviews and maps)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ============================================
# DEPLOYMENT SERVICES (Optional)
# ============================================
# Vercel Auto-Deploy
VERCEL_TOKEN=your-vercel-token
VERCEL_PROJECT_ID=your-project-id

# GitHub Integration
GITHUB_BOT_TOKEN=ghp_your-github-token
GITHUB_ORG=your-github-org

# ============================================
# REDIS CACHING (Required for production)
# ============================================
# Redis URL for distributed caching and rate limiting
# Get free tier from: https://redis.com/try-free/
REDIS_URL=redis://default:password@host:port
# OR use individual components:
# REDIS_HOST=your-redis-host
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# ============================================
# SENTRY ERROR MONITORING (Production)
# ============================================
# Get these from https://sentry.io/
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token
SENTRY_ORG=whaletools
SENTRY_PROJECT=pos

# ============================================
# AI AGENT CONFIGURATION (Optional)
# ============================================
MCP_AGENT_URL=http://localhost:3001
MCP_AGENT_SECRET=your-secret

# ============================================
# ALPINE IQ INTEGRATION (Optional)
# ============================================
ALPINEIQ_API_KEY=your-alpineiq-key
ALPINEIQ_API_URL=https://lab.alpineiq.com
ALPINEIQ_USER_ID=your-user-id
ALPINEIQ_STORE_ID=your-store-id
ALPINEIQ_LOYALTY_PROGRAM_ID=your-program-id

# ============================================
# PAYMENT GATEWAYS (Optional)
# ============================================
AUTHORIZE_NET_API_LOGIN_ID=your-login-id
AUTHORIZE_NET_TRANSACTION_KEY=your-transaction-key
AUTHORIZE_NET_ENVIRONMENT=sandbox

# ============================================
# ADMIN AUTHENTICATION (REQUIRED)
# ============================================
# Admin credentials - use the provided script to generate hashed passwords
# Run: npm run generate-admin-hash
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=your-bcrypt-hashed-password
READONLY_USERNAME=readonly
READONLY_PASSWORD_HASH=your-bcrypt-hashed-password

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
NODE_ENV=development
NEXT_PUBLIC_ENV=development
