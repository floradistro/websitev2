# CORS Headers - FIXED
<IfModule mod_headers.c>
    # Match exact origins
    SetEnvIf Origin "^http://localhost:3000$" AccessControlAllowOrigin=$0
    SetEnvIf Origin "^https://localhost:3000$" AccessControlAllowOrigin=$0
    SetEnvIf Origin "^https://websitev2-ashen\.vercel\.app$" AccessControlAllowOrigin=$0
    SetEnvIf Origin "^https://web2-seven-bice\.vercel\.app$" AccessControlAllowOrigin=$0
    SetEnvIf Origin "^https://.*-floradistros-projects\.vercel\.app$" AccessControlAllowOrigin=$0
    SetEnvIf Origin "^https://floradistro\.com$" AccessControlAllowOrigin=$0
    SetEnvIf Origin "^https://www\.floradistro\.com$" AccessControlAllowOrigin=$0
    
    # Apply headers
    Header always set Access-Control-Allow-Origin "%{AccessControlAllowOrigin}e" env=AccessControlAllowOrigin
    Header always set Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE, PATCH"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-WP-Nonce, X-Requested-With, Accept"
    Header always set Access-Control-Allow-Credentials "true"
    Header always set Access-Control-Max-Age "86400"
    
    # Handle OPTIONS
    RewriteEngine On
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
</IfModule>

